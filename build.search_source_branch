#!/bin/bash
 function search()
{ (
  cd "$1"
  PARAM=
  [ -z "$2" ] || PARAM="$2\$"
  find ./build -maxdepth 2 -mindepth 2 \( -name config -o -name config.* \) -type f -exec grep ^config_source_branch=$PARAM {} + \
    | xargs -L1 -I{} sh -c 'echo $(basename $(dirname {}))' | sort -u
) }

[ -n "$1" ] || exit 0

## $1 = project, package to build
## $2 = source_branch to search  for

out=$(search "$1" "$2")
if [ -n "$out" ]; then
    echo $out
else
    echo $2
fi
